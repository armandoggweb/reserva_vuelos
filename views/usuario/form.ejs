<section class="usuario-form alinear-vertical">
  <form method="POST" action=<%= action %> >
    <label for="nombre">Nombre: </label><br>
    <input type="text" id="nombre" name="nombre" value=<%= usuario ? usuario.nombre : "" %>><br>
    <label for="apellidos">Apellidos: </label><br>
    <input type="text" id="apellidos" name="apellidos" value=<%= usuario ? usuario.apellidos : "" %>><br>
    <label for="dni">DNI: </label><br>
    <input type="text" id="dni" name="dni" value=<%= usuario ? usuario.dni : "" %>><br>
    <label for="email">Email: </label><br>
    <input type="email" id="email" name="email" value=<%= usuario ? usuario.email : "" %>><br>
    <label for="edad">Edad: </label><br>
    <input type="number" id="edad" name="edad" value=<%= usuario ? usuario.edad : "" %>><br>
    <% if (!usuario) {%>
      <label for="password">Contrase√±a: </label><br>
      <input type="password" id="password" name="password" ><br>
    <% } %>
    <input class="btn" type="submit" value="Enviar">
  </form>

  <% if(errors) {%>
    <ul class="errors">
      <% errors.forEach( err => {%>
        <li>
          <%= err.msg %>
        </li>
      <% }) %> 
    </ul>
  <% } %> 
</section>
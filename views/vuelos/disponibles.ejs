<h3><%= aeropuertos.origen.nombre %> | <%= aeropuertos.destino.nombre %></h3>

<form method="GET">
  <table>
    <tr>
      <th></th>
      <th>Fecha de salida</th>
      <th>Hora de salida</th>
      <th>Fecha de llegada</th>
      <th>Hora de llegada</th>
    </tr>
  
    <% vuelos.forEach(vuelo =>{ %> 
      <tr>
        <td>
          <input type="radio" id=<%="vuelo" + vuelo.id %> name=vuelo value=<%= vuelo.id %> >
        </td>  
        <td>
          <%= vuelo.salida.toLocaleDateString('es-ES') %>
        </td>        
        <td>
          <%= vuelo.salida.toLocaleTimeString('es-ES') %>
        </td>
        <td>
          <%= vuelo.llegada.toLocaleDateString('es-ES') %>
        </td>        
        <td>
          <%= vuelo.llegada.toLocaleTimeString('es-ES') %>
        </td>
      </tr>
    <% }) %>

  </table>

  <input type="submit" value= "Enviar">
  
</form>